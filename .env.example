# Digital Assets Portfolio Analyzer - API Configuration
# Copy this file to .env and fill in your actual API keys

# Coinbase (Regular/Consumer) API - https://developers.coinbase.com/
# This is for the regular Coinbase app/website
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Coinbase Advanced Trade API (formerly Coinbase Pro) - https://docs.cdp.coinbase.com/advanced-trade/docs/welcome
# This is for Coinbase Advanced Trade (professional platform)
COINBASEADVANCED_API_KEY=your_coinbase_advanced_api_key_here
COINBASEADVANCED_API_SECRET=your_coinbase_advanced_api_secret_here
COINBASEADVANCED_API_PASSPHRASE=your_coinbase_advanced_passphrase_here

# Kraken API - https://www.kraken.com/features/api
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Binance US API - https://www.binance.us/en/usercenter/settings/api-management
BINANCEUS_API_KEY=your_binance_us_api_key_here
BINANCEUS_API_SECRET=your_binance_us_api_secret_here

# CoinGecko API - https://www.coingecko.com/en/api
# Note: CoinGecko has a generous free tier, no API key required for basic usage

# CoinMarketCap API - https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Optional: Set to 'true' to enable debug logging
DEBUG_MODE=false

# Optional: Set default date range for fetching transactions
DEFAULT_START_DATE=2020-01-01
DEFAULT_END_DATE=
